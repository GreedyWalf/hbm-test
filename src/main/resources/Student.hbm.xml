<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.qs.entity">
    <!-- 上面package属性指定包名，这里name属性值对应类无需写全路径 -->
    <class name="Student" table="t_student">
        <id name="studentId" type="string" column="STUDENT_ID" length="32">
            <generator class="uuid"/>
        </id>

        <!-- 直接使用property属性设置 -->
        <property name="studentName" type="string" column="STUDENT_NAME" length="50" not-null="true"/>

        <!--
            要查询到Course表，就需要通过中联表连接，这里table属性表示中间表的表名；
        -->
     <!--   <set name="courseSet" table="t_student_course">
            &lt;!&ndash; 这个column属性表示当前类（student）对应到中间表的外键字段名 &ndash;&gt;
            <key column="STUDENT_ID" not-null="true"/>
            &lt;!&ndash; 多对多映射关系，表示声明当前类（student）中维护的多对多关联表（course）在中间表的外键字段名 &ndash;&gt;
            <many-to-many class="com.qs.entity.Course" column="COURSE_ID"/>
        </set>-->
    </class>
</hibernate-mapping>