<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.qs.entity">
    <!-- 上面package属性指定包名，这里name属性值对应类无需写全路径 -->
    <class name="Course" table="t_course">
        <id name="courseId" type="string" column="COURSE_ID" length="32">
            <generator class="uuid"/>
        </id>

        <property name="courseName" type="string" column="COURSE_NAME" length="50" not-null="true"/>

        <!--
            要查询到多对多关联的student表数据，table属性指定维护的中间表表名；（hibernate会去这个表查询多对多关联关系）
         -->
        <set name="studentSet" table="t_student_course">
            <!-- 这个column属性表示当前类（course）对应到中间表的外键字段名 -->
            <key column="COURSE_ID" not-null="true"/>
            <!-- 多对多映射关系，表示声明当前类（course）中维护的多对多关联表（student）在中间表的外键字段名 -->
            <many-to-many class="com.qs.entity.Student" column="STUDENT_ID"/>
        </set>
    </class>
</hibernate-mapping>