<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.qs.entity">
    <class name="Customer" table="t_customer">
        <id name="customerId" type="string" column="customer_id" length="32">
            <generator class="uuid"/>
        </id>

        <property name="customerName" type="string" column="customer_name" length="50" not-null="true"/>

         <!--
         在一的一方维护多的一方数据；
          inverse：默认值为false，表示由自己（customer）维护关联关系，设置为true，表示由对方（order）维护；
          batch-size: 批量查询设置，先查询出customer对象，再关联查询order集合，batch-size值可以将多个select查询order数据合并为一个子查询，select...in...
         -->
        <set name="orderSet" inverse="true" batch-size="3">
            <key column="customer_id"/>
            <one-to-many class="Order"/>
        </set>
    </class>
</hibernate-mapping>