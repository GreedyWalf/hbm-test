<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.qs.entity">
    <!-- 上面package属性指定包名，这里name属性值对应类无需写全路径 -->
    <class name="Customer" table="t_customer">
        <id name="id" type="string" column="ID" length="32">
            <generator class="uuid"/>
        </id>

        <!-- 直接使用property属性设置 -->
        <property name="name" type="string" column="NAME" length="50" not-null="true"/>

        <!--
            xml方式实现oneToMany关联，即在一的一方维护多的一方数据；
            inverse属性：默认为false，表示控制权在customer一方维护;
            lazy属性：默认值为true，表示启用延迟加载；设置为false，表示立即加载（在真正使用属性时的时候才向数据库发送sql，查询获取；比如customer对象）
         -->
        <set name="orders" inverse="true" lazy="false">
            <key column="CUSTOMER_ID"/>
            <one-to-many class="Order"/>
        </set>
    </class>
</hibernate-mapping>