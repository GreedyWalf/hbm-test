<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.qs.entity">
    <!-- 上面package属性指定包名，这里name属性值对应类无需写全路径 -->
    <class name="StudentCourseRel" table="t_student_course">
        <id name="relId" type="string" column="REL_ID" length="32">
            <generator class="uuid"/>
        </id>

        <property name="createTime" type="date" column="CREATE_TIME" not-null="true"/>

        <many-to-one name="student" column="STUDENT_ID" class="Student"/>
        <many-to-one name="course" column="COURSE_ID" class="Course"/>
    </class>
</hibernate-mapping>